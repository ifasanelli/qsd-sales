<h1>Editar <%= Customer.model_name.human(count: 1) %></h1>

<%= link_to 'Voltar', customer_path(@customer) %>

<% if @customer.errors.any? %>
  <% @customer.errors.full_messages.each do |message| %>
    <div class="alert alert-danger" role="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= render partial: 'form', locals: { customer: @customer } %>