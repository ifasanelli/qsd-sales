<%= form_with model: @customer, class: 'ls-form ls-form-horizontal row', local: true do |f| %>
  <div class = 'ls-label col-md-12'>
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name, placeholder: 'João da Silva' %>
  </div>
  <div class='ls-label col-md-12'>
    <%= f.label :address, 'Endereço' %>
    <%= f.text_field :address, placeholder: 'Av. Brasil, 148' %>
  </div>
  <div class='ls-label col-md-6'>
    <%= f.label :document, 'CPF' %>
    <%= f.text_field :document, placeholder: '123.456.789-10' %>
  </div>
  <div class='ls-label col-md-6'>
    <%= f.label :email, 'E-mail' %>
    <%= f.text_field :email, placeholder: 'joao@email.com' %>
  </div>
  <div class='ls-label col-md-6'>  
    <%= f.label :phone, 'Telefone' %>
    <%= f.text_field :phone, placeholder: '(11)9999-9999' %>
  </div>
  <div class='ls-label col-md-6'>  
    <%= f.label :birth_date, 'Data de Nascimento' %>
    <%= f.date_field :birth_date %>
  </div>
  <div class="button">
    <div class='ls-actions-btn button'>
        <%= f.submit 'Salvar', class: 'ls-btn', style: "color: rgb(79, 89, 216);" %>
        <%= link_to 'Voltar', url_for(:back), class:"ls-btn" %>
    </div>
  </div>
<% end %>