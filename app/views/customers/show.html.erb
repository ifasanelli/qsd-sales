<h2>Cliente</h2>

<table class="ls-table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Endereço</th>
      <th>CPF</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Data de Nascimento</th>
      <th>Usuário</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if current_user.admin? || @customer.user == current_user %>
      <tr>
        <td><%= @customer.name %></td>
        <td><%= @customer.address %></td>
        <td><%= @customer.document %></td>
        <td><%= @customer.email %></td>
        <td><%= @customer.phone %></td>
        <td><%= @customer.birth_date %></td>
        <td><%= @customer.user.email %></td>
        <td><%= link_to 'Novo Pedido', new_customer_order_path(@customer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Editar', edit_customer_path %>

<%= link_to 'Apagar', customer_path(@customer), method: :delete,
    data: { confirm: "Tem certeza de que deseja deletar #{@customer.name}"} %>