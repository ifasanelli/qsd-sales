<%= link_to 'Registrar Novo', new_customer_path, class: 'ls-btn-primary button' %>

<table class="ls-table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
    <% @customers.each do |customer| %>
      <tr id="customer-<%= customer.id %>">
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td>
          <%= link_to '', customer_path(customer), class: "ls-ico-zoomin" %>
          <%= link_to '', edit_customer_path(customer), class: "ls-ico-pencil" %>
          <%= link_to '', customer_path(customer), method: :delete, class: "ls-ico-remove",
          data: { confirm: "Tem certeza de que deseja deletar #{customer.name}?"} %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>
