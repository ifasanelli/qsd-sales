<h1>Clientes</h1>
<div>
  <%= link_to 'Registrar Novo', new_customer_path, class: 'ls-btn-primary' %>
</div><br>


<%= flash[:notice] %>

<section>
  <%= form_tag search_customers_path, method: 'get' do %>
    <%= label_tag :q, 'Pesquisar' %>
    <%= text_field_tag :q %>
    <%= submit_tag 'Buscar'%>
  <% end %>
</section>

<table class="ls-table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>CPF</th>
      <th>Email</th>
      <th>Usu√°rio</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <% if current_user.admin? || customer.user == current_user %>
        <tr>
          <td><%= link_to customer.name, customer_path(customer) %></td>
          <td><%= customer.document %></td>
          <td><%= customer.email %></td>
          <td><%= customer.user.email %></td>
          <td><%= link_to 'Novo Pedido', new_customer_order_path(customer) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to 'Voltar', root_path %>