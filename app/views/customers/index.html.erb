<h1>Clientes</h1>
<section>
  <%= form_tag search_customers_path, method: 'get' do %>
    <%= label_tag :q, 'Pesquisar' %>
    <%= text_field_tag :q %>
    <%= submit_tag 'Buscar'%>
  <% end %>
</section>

<% if @customers.empty? && params[:q] %>
  <p>Cliente nÃ£o cadastrado</p>
<% else %>
<% @customers.each do |customer| %>
  <%= customer.document %>
  <%=  customer.name %>
  <%= link_to 'Novo Pedido', new_customer_order_path(customer) %>
<% end %>

<% end %>
